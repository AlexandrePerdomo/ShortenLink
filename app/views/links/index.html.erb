<p id="notice"><%= notice %></p>

<h1>Links</h1>

<table>
  <%= render 'form', link: @link %>

  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to "#{link_url}", link %></td>
        <td><%= link_to 'Supprimer', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New link', new_link_path %>
